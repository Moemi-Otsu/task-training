<div class="wrapper-box col-md-8 col-md-offset-2 col-sm-8">
  <h1><%= @user.name %>のページ</h1>
  <div class="show_box">
    <p>メールアドレス：<%= @user.email %></p>
    <ul class="btns">
      <li><%= link_to t('view.admin_user_edit'), edit_admin_user_path(@user.id) %></li>
    </ul>
    <table class="table">
      <tr>
        <td><%= t('view.user_task_count') %></td>
        <td><%= t('view.title') %></td>
        <td><%= t('view.content') %></td>
        <td><%= t('view.deadline') %></td>
        <td><%= t('view.status') %></td>
        <td><%= t('view.priority') %></td>
      </tr>
    <% @tasks.each_with_index do |t, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= t.title %></td>
        <td><%= t.content %></td>
        <td><%= t.deadline %></td>
        <td><%= t.status %></td>
        <td><%= t.priority %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <ul class="btns">
    <li><%= link_to t('view.back_index'), admin_users_path %></li>
  </ul>
</div>