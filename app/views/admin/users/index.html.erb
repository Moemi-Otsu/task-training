<div class="admin-column col-md-12 col-sm-12">
  <h1><%= t('view.admin_index') %></h1>
  <p class="admin-new-user"><%= link_to t('view.ユーザー新規作成'), new_admin_user_path %></p>
  <table class="table">
    <tr>
      <th><%= t('view.user_login_user_id') %></th>
      <th><%= t('view.user_login_name') %></th>
      <th><%= t('view.user_login_email') %></th>
      <th><%= t('view.admin_tasks_count') %></th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  <% @users.each do |users| %>
    <tr>
      <td><%= users.id %></td>
      <td><%= users.name %></td>
      <td><%= users.email %></td>
      <td><%= users.tasks.count %></td>
      <td class="btn_detail"><%= link_to t('view.detail'), admin_user_path(users.id) %></td>
      <td class="btn_edit"><%= link_to t('view.edit'), edit_admin_user_path(users.id) %></td>
      <td class="btn_delete"><%= link_to t('view.delete'), user_path(users.id), method: :delete, data: { confirm: t('view.alert_delete') } %></td>
    </tr>
  <% end %>
  </table>

  <div class="kaminari-pagenation">
    <%= paginate @users %>
  </div>

</div>