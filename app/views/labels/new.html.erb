<div class="wrapper-box col-md-8 col-md-offset-2 col-sm-8">
  <h1>ラベル新規登録</h1>
  <% if @label.errors.any? %>
    <div class="error_explanation label-errors">
      <h2><%= pluralize(@label.errors.count, "件") %> のエラーがあります。</h2>
      <ul>
        <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @label, local: true) do |f| %>
  <div class="task_title">
    <%= f.text_field :label_name, placeholder: t('view.label_name') %>
    <div class="submit text-center">
      <%= f.submit t('view.new') %>
    </div>
  </div>
  <% end %>
  
  <div class="btns">
    <p><%= link_to t('view.back_index'), tasks_path %></p>
  </div>
</div>