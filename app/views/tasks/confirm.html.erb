<div class="wrapper-box col-md-8 col-md-offset-2 col-sm-8">
<h1><%= t('view.title_h1_confirm') %></h1>

<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :deadline %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>
  <%= form.hidden_field :labels_on_task_ids, multiple: true %>

  <p><%= t('view.title') %>：<%= @task.title %></p>
  <p><%= t('view.content') %>：<%= @task.content %></p>
  <p><%= t('view.deadline') %>：<%= @task.deadline %></p>
  <p><%= t('view.status') %>：<%= @task.status %></p>
  <p><%= t('view.priority') %>：<%= @task.priority %></p>
  <p><%= t('view.label_name') %>：
    <% @task.labels_on_task.each do |i| %>
      <span><%= i.label_name %></span>
    <% end %>
  </p>
  <%= form.submit  t('view.submit') %>
<% end %>

<%= form_with(model: @task, url: new_task_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :deadline %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>
  <%= form.hidden_field :labels_on_task_ids, multiple: true %>
  <%= form.submit t('view.back'), name: 'back' %>
<% end %>
</div>