<h1>タスク一覧</h1>
<p><%= notice %></p>

<table>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
  </tr>
<% end %>
</table>

<div class="btns">
  <p><%= link_to '新規作成', new_task_path %></p>
  <p><%= link_to '一覧へ戻る', tasks_path %></p>
</div>