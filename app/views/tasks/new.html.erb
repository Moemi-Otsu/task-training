<h1>新規投稿</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="task_title">
    <%= form.label :'タイトル' %>
    <%= form.text_field :title %>
  </div>
  <div class="task_title">
    <%= form.label :'タスク内容' %>
    <%= form.text_field :content %>
  </div>
  <div class="submit">
    <%= form.submit '投稿する' %>
  </div>
<% end %>