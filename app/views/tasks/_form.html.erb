<%= form_with(model: @task, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %><%= t('view.alert_error_num') %></h2>
      <ul>
       <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_title">
    <%= form.label :'title', t('view.title') %>
    <%= form.text_field :title, id: 'title' %>
  </div>
  <div class="task_title">
    <%= form.label :'content', t('view.content') %>
    <%= form.text_field :content, id: 'content' %>
  </div>
  <div class="submit">
    <%= form.submit t('view.submit') %>
  </div>
<% end %>
<div class="btns">
  <p><%= link_to t('view.new'), new_task_path %></p>
  <p><%= link_to t('view.back'), tasks_path %></p>
</div>